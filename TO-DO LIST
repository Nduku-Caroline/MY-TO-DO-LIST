    }

    body.dark {
      --bg-gradient: linear-gradient(135deg, #2c3e50, #4ca1af);
      --container-bg: #222;
      --text-color: #eee;
      --task-bg: #333;
      --completed-bg: #444;
      --button-bg: #00bcd4;
      --button-hover: #0097a7;
      --delete-color: #ff7676;
    }

    body {
      font-family: "Poppins", sans-serif;
